Var
cliente = {nome: nome, cpf: cpf}

Função CadastroCliente()
    	Leia ("Cadastro de Cliente")
   	Escreva ("Digite o nome do cliente:")
   	Leia (nome)
   	Escreva ("Digite o CPF do cliente:")
  	Leia (cpf)
        Leia ("Cliente cadastrado com sucesso!")
Fim da Função
 
Var
destino = {nome: nomeDestino, descricao: descricao}

Função CadastroDestino()
   	 Leia ("Cadastro de Destino")
   	 Escreva ("Digite o nome do destino:")
   	 Leia (nomeDestino)
   	 Escreva ("Digite a descrição do destino:")
   	 Leia (descricao)
   	 Leia ("Destino cadastrado com sucesso!")
Fim da Função
 
Função ConsultaClientes(clientes)
    Leia "Consulta de Clientes"
    
    Se tamanho de cliente = 0
    	Leia "Nenhum cliente cadastrado."
    FimSe 
    
    Leia ("Lista de Clientes:")
    
    Para cada cliente em clientes
        Leia "Nome: " + cliente.nome
        Leia "CPF: " + cliente.cpf
        Leia "--------------------------->"
    
Fim da Função
 
Função ConsultaDestinos(destinos)
    Leia "Consulta de Destinos"
    
    Se tamanho de destinos = 0
        Leia "Nenhum destino cadastrado."
    FimSe
    
    Leia "Lista de Destinos:"
    
    Para cada destino em destinos
        Leia "Nome: " + destino.nome
        Leia "Descrição: " + destino.descricao
        Leia "-----------------------"
    
Fim da Função
 
// Programa principal
Var
    opcao = 0
    clientes = [] // vetor para armazenar os clientes
    destinos = [] // vetor para armazenar os destinos
 
Enquanto verdadeiro
    Leia "MENU"
    Leia "1. Cadastro de Cliente"
    Leia "2. Cadastro de Destino"
    Leia "3. Consulta de Clientes"
    Leia "4. Consulta de Destinos"
    Leia "5. Sair"
    Ecreva "Escolha uma opção:"
FimEnquanto
    
    
    Se opcao = 1
        CadastroCliente(clientes)
    Senão, se opcao = 2
        CadastroDestino(destinos)
    Senão, se opcao = 3
        ConsultaClientes(clientes)
    Senão, se opcao = 4
        ConsultaDestinos(destinos)
    Senão, se opcao = 5
        Exibir "Saindo do programa..."
        Parar
    Senão
        Leia "Opção inválida. Tente novamente."
    FimSe
    
Fim do Programa
